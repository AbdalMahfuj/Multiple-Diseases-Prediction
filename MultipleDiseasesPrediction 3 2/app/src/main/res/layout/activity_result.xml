<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@mipmap/background1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:id="@+id/title_dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diabetes Prediction Result"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="left"
            android:textFontWeight="600"
            android:textSize="25sp"
            android:textAllCaps="true"
            >
        </TextView>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Sorry!"
            android:id="@+id/result_show"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#DA030A"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/resultId"
            android:gravity="center"
            android:text="You are affected by diabetes disease"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="15dp"
            android:layout_marginTop="-25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAllCaps="false"
            android:id="@+id/rate_btn"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="Rate this app"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAllCaps="false"
            android:id="@+id/home"
            android:backgroundTint="@color/greenColor"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="Return to homepage"/>


    </LinearLayout>



</LinearLayout>